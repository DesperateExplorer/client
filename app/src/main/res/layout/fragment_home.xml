<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    tools:context="com.example.testing.HomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/search_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@drawable/search_button"
            android:text="       点击搜索"
            android:textAlignment="viewStart"
            android:textColor="@color/gray"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/home_set_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_dehaze_24"
            android:scaleX="0.3"
            android:scaleY="0.5" />

    </LinearLayout>

    <com.qmuiteam.qmui.widget.tab.QMUITabSegment
        android:id="@+id/home_tabSegment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="@color/qmui_config_color_white"
        app:qmui_bottomDividerColor="@color/gray"
        app:qmui_bottomDividerHeight="1px" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/home_contentViewPager"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:fitsSystemWindows="true" >

    </androidx.viewpager.widget.ViewPager>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="100" />


</LinearLayout>
